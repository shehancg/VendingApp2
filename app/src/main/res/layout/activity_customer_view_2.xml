<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalimage"
    tools:context=".CustomerView_2">

    <ImageButton
        android:id="@+id/btn_speak"
        android:layout_width="146dp"
        android:layout_height="131dp"
        android:layout_marginTop="28dp"
        android:adjustViewBounds="true"
        android:background="@drawable/greenroundedbutton"
        android:padding="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/ic_speak" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="878dp"
        android:layout_height="180dp"
        android:layout_marginTop="48dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Thank You ! What would you like to say ?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/cardview_shadow_start_color"
        android:text="Press to Speak"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_speak" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="327dp"
        android:layout_height="85dp"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="55dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="326dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:background="@color/cardview_shadow_start_color"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="36sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_speak"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>